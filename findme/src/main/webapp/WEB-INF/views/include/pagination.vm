<input type="hidden" id="total" value="$page.total" />
<input type="hidden" id="pageSize" name="pageSize" value="$page.pageSize" />
#if ($totalPages > 1 || $totalPages==1)
	<div class="pagination">
		#if ($isFirst)
			<span class="firstPage">&nbsp;</span>
		#else
			<a class="firstPage" href="javascript:;" onclick="javascript: $.pageSkip($firstPageNumber);">&nbsp;</a>
		#end
		#if ($hasPrevious)
			<a class="previousPage" href="javascript:;" onclick="javascript: $.pageSkip($previousPageNumber);">&nbsp;</a>
		#else
			<span class="previousPage">&nbsp;</span>
		#end
		#foreach ($segment in $segmentPageNumber)
			#if ($segmentPageNumber_index == 0 && $segmentPageNumber > $firstPageNumber + 1)
				<span class="pageBreak">...</span>
			#end
			#if ($segmentPageNumber != $pageNumber)
				<a href="javascript:;" onclick="javascript: $.pageSkip($segmentPageNumber);">${segmentPageNumber}</a>
			#else
				<span class="currentPage">$segmentPageNumber</span>
			#end
			#if $!segmentPageNumber_has_next && $segmentPageNumber < $lastPageNumber - 1
				<span class="pageBreak">...</span>
			#end
		#end
		#if (hasNext)
			<a class="nextPage" href="javascript:;" onclick="javascript: $.pageSkip($nextPageNumber);">&nbsp;</a>
		#else
			<span class="nextPage">&nbsp;</span>
		#end
		#if (isLast)
			<span class="lastPage">&nbsp;</span>
		#else
			<a class="lastPage" href="javascript:;" onclick="javascript: $.pageSkip($lastPageNumber);">&nbsp;</a>
		#end
		<span class="pageSkip">
			第$totalPages页 到第<input id="pageNumber" name="pageNumber" value="' + pageNumber + '" maxlength="9" onpaste="return false;" />页<button type="submit">&nbsp;</button>
		</span>
	</div>
#end
